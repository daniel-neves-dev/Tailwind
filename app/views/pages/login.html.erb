<div class="max-w-md bg-blue-500">
  <h2 class="text-center font-bold mb-4 text-lg">Login</h2>

  <div class="bg-white shadow-md rounded-md p-4">
    <div>
      <label for="email" class="block text-sm text-gray-800 mb-1">E-mail</label>
      <input id="email"
             placeholder="Digite seu e-mail"
             class="bg-gray-50 border border-gray-600 focus:border-blue-600 focus:outline-none rounded px-2 py-1 placeholder-gray-600"
             type="text">
    </div>

    <div>
      <label for="password" class="block text-sm text-gray-800 mb-1">Senha</label>
      <input id="password"
             placeholder="Digite sua senha"
             class="bg-gray-50 border border-gray-600 focus:border-blue-600 focus:outline-none rounded px-2 py-1 placeholder-gray-600"
             type="text">
    </div>

    <div>
      <button>Login</button>
    </div>
  </div>

</div>