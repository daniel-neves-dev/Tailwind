<div class="w-80">

  <h2 class="text-center font-bold mb-4 text-lg">Login</h2>

  <div class="bg-white shadow-md rounded-md p-4 space-y-6">
    <div>
      <label for="email" class="block text-sm text-gray-800 mb-1">E-mail</label>
      <input id="email"
             placeholder="Digite seu e-mail"
             class="w-full bg-gray-50 border border-gray-600 focus:border-blue-600 focus:outline-none rounded px-2 py-1 placeholder-gray-600"
             type="text">
    </div>

    <div>
      <label for="password" class="block text-sm text-gray-800 mb-1">Senha</label>
      <input id="password"
             placeholder="Digite sua senha"
             class="w-full bg-gray-50 border border-gray-600 focus:border-blue-600 focus:outline-none rounded px-2 py-1 placeholder-gray-600"
             type="text">
    </div>

    <div class="text-center">
      <a href="" class="text-sm text-gray-500 hover:underline">
        Esqueci minha senha
      </a>
    </div>

    <div>
      <button class="w-full bg-blue-600 hover:bg-blue-800 px-4 py-1 rounded text-white ring-4">
        Login
      </button>
    </div>
  </div>

</div>